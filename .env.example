# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# External Storage Path (outside project folder)
RESEARCH_DATA_PATH=C:/path/to/external/storage

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3:7b

# Web Search Configuration
SEARCH_ENGINE=duckduckgo  # Options: google, serper, tavily, duckduckgo

# Google Search Configuration (only needed if SEARCH_ENGINE=google)
SEARCH_API_KEY=your_google_api_key_here
GOOGLE_CSE_ID=your_google_cse_id_here

# Serper API Configuration (only needed if SEARCH_ENGINE=serper)
SERPER_API_KEY=your_serper_api_key_here

# Tavily API Configuration (only needed if SEARCH_ENGINE=tavily)
TAVILY_API_KEY=your_tavily_api_key_here

# Vector Database Configuration
VECTOR_DB_TYPE=chroma  # Options: chroma, faiss, qdrant
VECTOR_DB_PATH=${RESEARCH_DATA_PATH}/vector_db

# Logging Configuration
LOG_LEVEL=INFO  # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
